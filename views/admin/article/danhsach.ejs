<% include ../playout/header.ejs %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->

    <% include ../playout/menu.ejs %>


    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Danh Sách Article</h1>
                    </div>
                    <div class="pull-right hidden-xs">

                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">All Article</h2>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <% if(success_msg != ''){ %>
                            <div class="alert alert-success">
                                <%= success_msg%>
                            </div>
                            <% } %>
                            <div class="col-xs-12">
                                <!-- ********************************************** -->
                                <table id="example" class="display table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>ID Article</th>
                                            <th>Title</th>
                                            <th>Hình</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var id = 0 %>
                                        <% product.forEach(function(item){ id++; %>
                                        <tr>
                                            <td>
                                                <%= id %>
                                            </td>
                                            <td>
                                                <%= item.title%>
                                            </td>
                                            <td> <img src="<%= item.img %>" width="100px" alt=""></td>
                                            <td id="des">
                                                <% if(item.des.length > 70){ %>
                                                    <%= item.des.toString().slice(0,70) %> <p>......</p>
                                                <%}else {%>
                                                <%= item.des %>

                                                <%} %>
                                            </td>
                                            <td>
                                                <a onclick="return check()" href="/admin/article/<%= item._id %>/xoa-article.html">Xoá</a>
                                                |
                                                <a href="/admin/article/<%= item._id %>/sua-article.html">Sửa</a>
                                            </td>
                                        </tr>
                                        <%})%>
                                    </tbody>
                                </table>
                                <!-- ********************************************** -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows ">

    </div>

    <% include ../playout/footer.ejs %>
    <script src="TT_Admin/assets/plugins/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="TT_Admin/assets/plugins/datatables/extensions/TableTools/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script src="TT_Admin/assets/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="TT_Admin/assets/plugins/datatables/extensions/Responsive/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
    <script>
        function check() {
            if (window.confirm('Are you sure do that? ')) {
                return true;
            }
            return false;
        }
    </script>
    <script>

        var des = document.getElementById('des').innerText;
        var strucate = des.toString().slice(0, 70);
        console.log(des);

        $('#des').html(strucate + '....');

    </script>